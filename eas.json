{
  "cli": {
    "version": ">= 7.1.0",
    "requireCommit": false,
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "channel": "development",
      "env": {
        "APP_ENV": "development"
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleDebug",
        "credentialsSource": "remote"
      }
    },
    "preview": {
      "distribution": "internal",
      "channel": "preview",
      "env": {
        "APP_ENV": "preview"
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease",
        "credentialsSource": "remote"
      }
    },
    "production": {
      "autoIncrement": true,
      "channel": "production",
      "env": {
        "APP_ENV": "production"
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease",
        "credentialsSource": "remote"
      }
    },
    "simple": {
      "android": {
        "buildType": "apk",
        "credentialsSource": "remote"
      }
    },
    "production-apk": {
      "channel": "production",
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease",
        "credentialsSource": "remote"
      }
    },
    "simple-apk": {
      "android": {
        "buildType": "apk",
        "credentialsSource": "remote",
        "image": "ubuntu-22.04-jdk-11-ndk-r21e",
        "env": {
          "GRADLE_OPTS": "-Dorg.gradle.daemon=false -Dorg.gradle.jvmargs=-Xmx3g -Dorg.gradle.parallel=false"
        }
      }
    },
    "stable-build": {
      "android": {
        "buildType": "apk",
        "credentialsSource": "remote",
        "image": "ubuntu-20.04-jdk-8-ndk-r21e",
        "gradleCommand": ":app:assembleRelease",
        "env": {
          "GRADLE_OPTS": "-Dorg.gradle.daemon=false -Dorg.gradle.jvmargs=-Xmx2g"
        }
      }
    }
  },
  "submit": {
    "production": {}
  }
}
